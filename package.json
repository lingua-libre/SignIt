{
  "name": "sign-it",
  "version": "1.0.21",
  "description": "SignIt translate a selected word into Sign Language videos",
  "main": "background-script.js",
  "dependencies": {
    "banana-i18n": "^2.3.3",
    "oojs-ui": "^0.44.1",
    "webextension-polyfill": "^0.9.0"
  },
  "devDependencies": {
    "web-ext": "^7.2.0"
  },
  "scripts": {
    "postinstall": "bin/build.sh",
    "web-ext:build": "web-ext build    # zips all content but .git files",
    "web-ext:test-firefox" : "web-ext run --source-dir ./ --url=fr.wikipedia.org --target=firefox-desktop # --verbose ",
    "web-ext:test-chromium": "web-ext run --source-dir ./ --url=fr.wikipedia.org --target=chromium"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lingua-libre/SignIt.git"
  },
  "keywords": [
    "sign",
    "language",
    "signlanguage",
    "webextension",
    "firefox",
    "chrome",
    "video"
  ],
